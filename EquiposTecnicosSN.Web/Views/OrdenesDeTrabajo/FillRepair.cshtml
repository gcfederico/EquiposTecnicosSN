@model EquiposTecnicosSN.Entities.Mantenimiento.OrdenDeTrabajo
@{
    ViewBag.Title = "Orden de Trabajo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-default">
                <div class="panel-heading">@ViewBag.Title</div>
                <div class="panel-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.OrdenDeTrabajoId)

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>
                                    @Html.DisplayNameFor(model => model.FechaInicio)
                                    @Html.HiddenFor(model => model.FechaInicio)
                                </label>
                                <p class="form-control-static">
                                    @Html.DisplayFor(model => model.FechaInicio)
                                </p>
                            </div>
                            <div class="form-group">
                                <label>
                                    @Html.DisplayNameFor(model => model.Equipo)
                                </label>
                                <p class="form-control-static">
                                    @Html.DisplayFor(model => model.Equipo.NombreCompleto)
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>
                                    @Html.DisplayNameFor(model => model.NumeroReferencia)
                                </label>
                                <p class="form-control-static">
                                    @Html.DisplayFor(model => model.NumeroReferencia)
                                </p>
                            </div>

                            <div class="form-group">
                                <label>
                                    @Html.DisplayNameFor(model => model.Equipo.Ubicacion)
                                </label>
                                <p class="form-control-static">
                                    @Html.DisplayFor(model => model.Equipo.Ubicacion.Nombre)
                                </p>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <label>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </label>
                            <p class="form-control-static">
                                @Html.DisplayFor(model => model.Descripcion)
                            </p>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <label>
                                @Html.DisplayNameFor(model => model.Diagnostico)
                            </label>
                            <p class="form-control-static">
                                @Html.DisplayFor(model => model.Diagnostico)
                            </p>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.DetalleReparacion, htmlAttributes: new { @class = "control-label" })
                            @Html.TextAreaFor(model => model.DetalleReparacion, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DetalleReparacion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <!-- REPUESTOS-->
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.CausaRaiz, htmlAttributes: new { @class = "control-label" })
                            @Html.TextAreaFor(model => model.CausaRaiz, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CausaRaiz, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <a href="@Url.Action("Index")" class="btn btn-default"> Volver</a>
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

