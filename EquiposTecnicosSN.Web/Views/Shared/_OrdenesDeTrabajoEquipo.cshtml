@using EquiposTecnicosSN.Entities.Mantenimiento
@using EquiposTecnicosSN.Web.CustomExtensions
@model EquiposTecnicosSN.Entities.Equipos.Equipo

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Listado de Ordenes de trabajo</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.ActionLink("Nuevo", "CreateForEquipo", "OrdenesDeTrabajo", new { id = Model.EquipoId }, htmlAttributes: new { @type = "button", @class = "btn btn-primary btn-table-create" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <table class="table table-hover table-responsive table-condensed table-striped">
                            <thead>

                                <tr>
                                    <th>
                                        Nº de Referencia
                                    </th>
                                    <th>
                                        Estado
                                    </th>
                                    <th>
                                        Fecha de Inicio
                                    </th>
                                    <th>
                                        Descripción
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.OrdenesDeTrabajo)
                                {
                                    string cssClass;

                                    if (item.Estado != OrdenDeTrabajoEstado.Cerrada)
                                    {
                                        switch (item.Prioridad)
                                        {
                                            case OrdenDeTrabajoPrioridad.Emergencia:
                                                cssClass = "danger";
                                                break;

                                            case OrdenDeTrabajoPrioridad.Urgencia:
                                                cssClass = "warning";
                                                break;

                                            case OrdenDeTrabajoPrioridad.Normal:
                                                cssClass = "success";
                                                break;

                                            default:
                                                cssClass = "";
                                                break;
                                        }
                                    }
                                    else
                                    {
                                        cssClass = "info";
                                    }
                                        <tr class="@cssClass">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NumeroReferencia)
                                            </td>
                                            <td>
                                                @item.Estado.DisplayName()
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaInicio)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Descripcion)
                                            </td>
                                            <td><!--                                                    
                                                <a class="btn btn-default btn-xs"
                                                   href="@Url.Action("Edit", "OrdenesDeTrabajo", new { id = item.OrdenDeTrabajoId }, null)"
                                                   title="Editar Orden de trabajo">
                                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                                </a>-->
                                                
                                                <a class="btn btn-default btn-xs"
                                                   href="@Url.Action("Details", "OrdenesDeTrabajo", new { id = item.OrdenDeTrabajoId }, null)"
                                                   title="Ver Orden de trabajo">
                                                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                                </a><!--                                                        
                                                <a class="btn btn-default btn-xs"
                                                   href="@Url.Action("Delete", "OrdenesDeTrabajo", new { id = item.OrdenDeTrabajoId }, null)"
                                                   title="Eliminar Orden de trabajo">
                                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                                </a>
                                                    -->
                                            </td>
                                        </tr>
                                        }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
