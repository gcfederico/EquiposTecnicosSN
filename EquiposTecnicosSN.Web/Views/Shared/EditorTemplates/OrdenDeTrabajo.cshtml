@model EquiposTecnicosSN.Entities.Mantenimiento.OrdenDeTrabajo

<div class="panel panel-default">
    <div class="panel-heading">Nueva @ViewBag.Title</div>
    <div class="panel-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.OrdenDeTrabajoId)
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Mantenimiento, "Mantenimiento", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("MantenimientoId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MantenimientoId, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Diagnostico, htmlAttributes: new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.Diagnostico, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Diagnostico, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.ProveedorId, "Proveedor", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("ProveedorId", null, "Ninguno", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ProveedorId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Resolucion, htmlAttributes: new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.Resolucion, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Resolucion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">Gastos</div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                @Html.ActionLink("Añadir Gasto", "AddGastoToOrden", null, new { @id = "addGasto", @class = "btn btn-default" })
                <table class="table">
                    <thead>
                        <tr>
                            <th>Concepto</th>
                            <th>Monto</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tablaGastos">
                        @foreach (var gasto in Model.Gastos)
                        {
                            <tr class="gastoRow">
                                @Html.Partial("_AddGastoToOrden", gasto)
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>