<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/lib/bower_components/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if (Request.IsAuthenticated)
    {
        <div id="wrapper">
            <!-- Navigation -->
            <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    
                    <img src="@Url.Content("/Content/images/logo-nqn.png")"
                         alt="Equipos Tecnicos"
                         style="max-height: 50px; padding-left: 5px;" />
                        
                    <a href="@Url.Action("Index", "Home", new { area = "" })"
                       class="navbar-brand app-logo">
                        Application name
                    </a>
                </div>

                @Html.Partial("_LoginPartial")

                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <ul class="nav" id="side-menu">

                            <li>
                                <a href="@Url.Action("Index", "Home")"><i class="fa fa-home fa-fw"></i> Inicio</a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-medkit fa-fw"></i> Equipos<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li>
                                        @Html.ActionLink("Equipos de Climatización", "Index", "EquiposClimatizacion")
                                    </li>
                                    <li>
                                        @Html.ActionLink("Todos los Equipos", "Index", "EquiposBase")
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-wrench fa-fw"></i> Ordenes de Trabajo</a>
                            </li>
                            <li>
                                <a href=@Url.Action("Index", "Traslados")><i class="fa fa-truck fa-fw"></i> Traslados</a>
                            </li>
                            <li>
                                <a href=@Url.Action("Index", "StockRepuestos")><i class="fa fa-archive fa-fw"></i> Stock de Repuestos</a>
                            </li>
                            <li>
                                <a href=@Url.Action("Index", "Repuestos")><i class="fa fa-gears fa-fw"></i> Repuestos</a>
                            </li>

                            @if (User.IsInRole("admin"))
                            {
                                <li>
                                    <a href=@Url.Action("Index", "SolicitudesUsuarios")>
                                        <i class="fa fa-users fa-fw"></i> Solicitudes de Usuario
                                        <span class="badge">@{ Html.RenderAction("SolicitudesCount", "SolicitudesUsuarios", null); }</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-gear fa-fw"></i> Administración<span class="fa arrow"></span></a>
                                    <ul class="nav nav-second-level">
                                        <li>@Html.ActionLink("Checklists MP", "Index", "ChecklistsMantenimientoPreventivo")</li>
                                        <li>@Html.ActionLink("Proveedores", "Index", "Proveedores")</li>
                                        <li>@Html.ActionLink("Ubicaciones", "Index", "Ubicaciones")</li>
                                        <li>@Html.ActionLink("Fabricantes", "Index", "Fabricantes")</li>
                                        <li>@Html.ActionLink("Marcas", "Index", "Marcas")</li>
                                        <li>@Html.ActionLink("Modelos", "Index", "Modelos")</li>
                                    </ul>
                                    <!-- /.nav-second-level -->
                                </li>
                            }
                        </ul>
                    </div>
                    <!-- /.sidebar-collapse -->
                </div>

            </nav>
        </div>

                                            }

    <div id="page-wrapper">
        <div class="container body-content">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header">@ViewBag.Title</h3>
                </div>
            </div>
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-@ViewBag.CssClass alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    @ViewBag.Message
                </div>
            }
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/lib/bower_components")
    @Scripts.Render("~/bundles/datepicker")
    @Scripts.Render("~/bundles/myBundle")

    @RenderSection("scripts", required: false)

</body>
</html>
