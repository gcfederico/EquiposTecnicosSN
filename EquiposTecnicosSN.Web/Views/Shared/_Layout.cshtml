<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema de Gesti&oacute;n de Recursos F&iacute;sicos - Salud Neuqu&eacute;n</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/lib/bower_components/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if (Request.IsAuthenticated)
    {
        <div id="wrapper">
            <!-- Navigation -->
            <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    
                    <img src="@Url.Content("/Content/images/logo-nqn.png")"
                         alt="Equipos Tecnicos"
                         style="max-height: 50px; padding-left: 5px;" />
                        
                    <a href="@Url.Action("Index", "Home", new { area = "" })"
                       class="navbar-brand app-logo">
                        S.G.R.F. - Salud Neuqu&eacute;n
                    </a>
                </div>

                @Html.Partial("_LoginPartial")

                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <ul class="nav" id="side-menu">

                            <li>
                                <a href="@Url.Action("Index", "Home")"><i class="fa fa-home fa-fw"></i> Inicio</a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-bar-chart-o fa-fw"></i> Indicadores</a>
                                <ul class="nav nav-second-level">
                                    <li>@Html.ActionLink("Por Ubicación", "PorUbicacion", "Indicadores")</li>
                                    <li>@Html.ActionLink("Por Equipos", "PorUMDNS", "Indicadores")</li>
                                </ul>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "EquiposBase")"><i class="fa fa-medkit fa-fw"></i> Equipos</a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-file-text fa-fw"></i> Ordenes de Trabajo<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li>@Html.ActionLink("Mantenimientos Correctivos", "Index", "ODTMantenimientoCorrectivo")</li>
                                    <li>@Html.ActionLink("Mantenimientos Preventivos", "Index", "ODTMantenimientoPreventivo")</li>
                                </ul>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-gears fa-fw"></i> Repuestos<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li>@Html.ActionLink("Listado", "Index", "Repuestos")</li>
                                    <li>@Html.ActionLink("Stocks", "Index", "StockRepuestos")</li>
                                </ul>
                            </li>
                            <li>
                                <a href=@Url.Action("Index", "Proveedores")><i class="fa fa-truck fa-fw"></i> Provedores</a>
                            </li>
                            @if (User.IsInRole("admin"))
                            {
                                <li>
                                    <a href=@Url.Action("Index", "SolicitudesUsuarios")>
                                        <i class="fa fa-users fa-fw"></i> Solicitudes de Usuario
                                        <span class="badge">@{ Html.RenderAction("SolicitudesCount", "SolicitudesUsuarios", null); }</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-gear fa-fw"></i> Administración<span class="fa arrow"></span></a>
                                    <ul class="nav nav-second-level">
                                        <li>@Html.ActionLink("Checklists MP", "Index", "ChecklistsMantenimientoPreventivo")</li>
                                        <li>@Html.ActionLink("Ubicaciones", "Index", "Ubicaciones")</li>
                                        <li>@Html.ActionLink("Sectores", "Index", "Sectores")</li>
                                        <li>@Html.ActionLink("Códigos UMDNS", "Index", "Umdns")</li>
                                        <li>@Html.ActionLink("Fabricantes, Marcas y Modelos", "Index", "Fabricantes")</li>
                                    </ul>
                                    <!-- /.nav-second-level -->
                                </li>
                            }
                        </ul>
                    </div>
                    <!-- /.sidebar-collapse -->
                </div>

            </nav>
        </div>

                                            }

    <div id="page-wrapper">
        <div class="container body-content">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="page-header">@ViewBag.Title</h3>
                </div>
            </div>
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/lib/bower_components")
    @Scripts.Render("~/bundles/datepicker")
    @Scripts.Render("~/bundles/myBundle")
    @Scripts.Render("~/bundles/zingCharts")    

    @RenderSection("scripts", required: false)

</body>
</html>
