@model EquiposTecnicosSN.Web.Models.SearchEquipoViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading"><i class="fa fa-search fa-fw"></i> Buscar equipo</div>

            <div class="panel-body">
                <form id="FormBuscarEquipo" method="get" data-nqn-ajax="true" action="@Url.Action("SearchEquipos", "EquiposBase")" data-nqn-target="#searchEquipoResults">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Nombre Completo</label>

                                <input class="form-control text-box single-line"
                                       data-umdns-autocomplete-nombre="@Url.Action("AutocompleteNombreUMDNS", "EquiposBase")"
                                       data-val="true"
                                       data-val-maxlength="The field Nombre completo must be a string or array type with a maximum length of '255'."
                                       data-val-maxlength-max="255" data-val-required="The Nombre completo field is required."
                                       id="buscarNombreCompleto"
                                       name="buscarNombreCompleto" type="text" value="">

                            </div>

                            <div class="form-group">
                                <label class="control-label">UMDNS</label>
                                <input class="form-control text-box single-line"
                                       data-umdns-autocomplete-codigo="@Url.Action("AutocompleteCodigoUMDNS", "EquiposBase")"
                                       data-val="true"
                                       data-val-maxlength="The field UMDNS must be a string or array type with a maximum length of '255'."
                                       data-val-maxlength-max="255" data-val-required="The UMDNS field is required."
                                       id="buscarUMDNS"
                                       name="buscarUMDNS" type="text" value="">


                            </div>
                            <div class="form-group">
                                <label class="control-label">Estado</label>
                                @Html.EnumDropDownListFor(model => model.EstadoEquipo, "Todos", htmlAttributes: new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label class="control-label">Tipo de Equipo</label>
                                @Html.EnumDropDownListFor(model => model.SearchTipoEquipo, "Todos", htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.UbicacionId, "Ubicación", htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownList("UbicacionId", null, "Todas", htmlAttributes: new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.SectorId, "Sector", htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownList("SectorId", null, "Todas", htmlAttributes: new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.NumeroMatricula, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.NumeroMatricula, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <input id="buscarEquipo" type="submit" value="Buscar" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </form>
                <div class="row">
                    <div class="col-lg-12">
                        <div id="searchEquipoResults">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
