@model EquiposTecnicosSN.Entities.Equipos.EquipoClimatizacion

@{
    ViewBag.Title = "Equipo de Climatización";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        @Html.DisplayFor(model => model)
    </div>
</div>

@if (Model.InformacionHardware != null)
{
    <div class="row">
        <div class="col-lg-12">
            @Html.DisplayFor(model => model.InformacionHardware)
        </div>
    </div>
}

@if (Model.InformacionComercial != null)
{
    <div class="row">
        <div class="col-lg-12">
            @Html.DisplayFor(model => model.InformacionComercial)
        </div>
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        @Html.ActionLink("Volver", "Index")
    </div>
}
</div>
