@model IEnumerable<EquiposTecnicosSN.Entities.Equipos.EquipoClimatizacion>

@{
    ViewBag.Title = "Equipos de Climatización";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Listado de @ViewBag.Title</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.ActionLink("Nuevo", "Create", null, htmlAttributes: new { @type = "button", @class = "btn btn-primary btn-table-create" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <table id="table-equipos-climatizacion" class="table table-hover table-responsive table-condensed table-striped">
                            <thead>

                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ubicacion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NombreCompleto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UMDNS)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Estado)
                                </th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>


                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ubicacion.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreCompleto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UMDNS)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Estado)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { id = item.EquipoId }) |
                                        @Html.ActionLink("Ver", "Details", new { id = item.EquipoId }) |
                                        @Html.ActionLink("Borrar", "Delete", new { id = item.EquipoId }) |
                                        @Html.ActionLink("Nuevo Ticket", "CreateForEquipo", "Mantenimientos", new { idEquipo = item.EquipoId }, null)
                                    </td>
                                </tr>
                            }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>