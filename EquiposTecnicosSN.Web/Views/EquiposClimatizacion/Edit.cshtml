@model EquiposTecnicosSN.Entities.Equipos.EquipoClimatizacion

@{
    ViewBag.Title = "Editar Equipo de Climatización";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12">
            @Html.EditorFor(model => model);
            @Html.EditorFor(model => model.InformacionHardware);
            @Html.EditorFor(model => model.InformacionComercial);
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            <hr />
        </div>
    </div>
}
<div>
    @Html.ActionLink("Volver", "Index")
</div>
