@model EquiposTecnicosSN.Entities.Equipos.EquipoClimatizacion

@{
    ViewBag.Title = "Nuevo Equipo de Climatización";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12">
            @Html.EditorFor(model => model)
            @Html.EditorFor(model => model.InformacionHardware)
            @Html.EditorFor(model => model.InformacionComercial)
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
    <hr />
}
<div>
    @Html.ActionLink("Volver", "Index")
</div>