@{
    ViewBag.Title = "Indicadores por Ubicación";
}

<!-- UBICACION Y SECTORES -->
<div class="row" style="margin-bottom: 5px;">
    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                <a style="text-decoration: none" data-toggle="collapse" data-parent="#accordion" href="#collapseSectores" aria-expanded="true" class="">
                    <i class="fa fa-hospital-o fa-fw"></i> Ubicaci&oacute;n y Sectores
                </a>
            </div>
            <div id="collapseSectores" class="panel-collapse collapse" aria-expanded="true">
                <div class="panel-body">
                    <form id="formIndicadoresEquipoPorUbicacion" method="get" data-nqn-ajax="true" action="@Url.Action("IndicadoresPorUbicacion", "Indicadores")" data-nqn-target="#indicadoresEquipoPorUbicacion">

                    <div class="row" style="margin-bottom: 20px;">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label style="margin-top: 5px;">Ubicaci&oacute;n</label>
                                @Html.DropDownList("UbicacionId", null, "Todas", htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label style="margin-top: 5px;">Sector</label>
                                @Html.DropDownList("SectorId", null, "Todas", htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-bottom: 20px;">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label style="margin-top: 5px;">Fecha de Incio</label>
                                <input class="form-control date-picker text-box single-line" 
                                       id="fechaInicio" name="fechaInicio" type="datetime" 
                                       data-val="true" data-val-required="Debe seleccionar la fecha de inicio."
                                       value="">
                                <span class="field-validation-valid text-danger" data-valmsg-for="fechaInicio" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label style="margin-top: 5px;">Fecha de Fin</label>
                                <input class="form-control date-picker text-box single-line" 
                                       id="fechaFin" name="fechaFin" type="datetime" 
                                       data-val="true" data-val-required="Debe seleccionar la fecha de fin."
                                       value="">
                                <span class="field-validation-valid text-danger" data-valmsg-for="fechaFin" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input id="calcularIndicadores" type="submit" value="Calcular Indicadores" class="btn btn-primary pull-right" />
                        </div>
                    </div>
                    </form>
                    <div class="row">
                        <div class="col-md-12">
                            <div id="indicadoresEquipoPorUbicacion" class="ajax-result-list">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- GRAFICOS -->
<div class="row" style="margin-bottom: 5px;">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-bar-chart fa-fw"></i> Gr&aacute;ficos
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12" style="margin-bottom: 15px;">
                        <div class="btn-group btn-group-justified" role="group">
                            <a href="#" data-nqn-indicador="TMR" id="TMRChart" class="btn btn-info">Tiempo Medio de Reparación</a>
                            <a href="#" data-nqn-indicador="TMEF" id="TMEFChart" class="btn btn-info">Tiempo Entre Fallas</a>
                            <a href="#" data-nqn-indicador="TI" id="TIChart" class="btn btn-info">Tiempo de Indisponibilidad</a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div id='ParetoChartContainer'></div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
