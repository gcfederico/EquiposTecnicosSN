
@{
    ViewBag.Title = "Indicadores por Equipos";
}
<div class="row" style="margin-bottom: 5px;">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-bar-chart fa-fw"></i> Seleccionar un Equipo
            </div>

            <div class="panel-body">
                <form id="formIndicadoresUMDNS" method="get" data-nqn-ajax="true" action="@Url.Action("IndicadoresUMDNS", "Indicadores")" data-nqn-target="#indicadoresUMDNS">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="control-label">UMDNS</label>
                                <input class="form-control text-box single-line"
                                       data-umdns-autocomplete-codigo="@Url.Action("AutocompleteCodigoUMDNS", "EquiposBase")"
                                       data-val="true"
                                       data-val-maxlength="The field UMDNS must be a string or array type with a maximum length of '255'."
                                       data-val-maxlength-max="255" data-val-required="The UMDNS field is required."
                                       id="buscarUMDNS"
                                       name="buscarUMDNS" type="text" value="">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="control-label">Ubicaci&Oacute;n</label>
                                @Html.DropDownList("UbicacionId", null, "Todas", htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            <input id="buscarEquipo" type="submit" value="Calcular" class="btn btn-primary pull-right" />
                        </div>
                    </div>
                </form>
                <div class="row">
                    <div class="col-lg-12">
                        <div id="indicadoresUMDNS">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
