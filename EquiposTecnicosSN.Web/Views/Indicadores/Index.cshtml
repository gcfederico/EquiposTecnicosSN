@{
    ViewBag.Title = "Indicadores";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                <a style="text-decoration: none" data-toggle="collapse" data-parent="#accordion" href="#collapseSectores" aria-expanded="true" class=""><i class="fa fa-bar-chart fa-fw"></i> Sectores</a>
            </div>
            <div id="collapseSectores" class="panel-collapse collapse" aria-expanded="true">
                <div class="panel-body">
                    <input id="seleccionarToggle" type="button" value="Seleccionar Todos/Ninguno" class="btn btn-default" />
                    <hr />
                    <div id="Sectores" class="row">
                        <div id="loader" class="col-lg-12">
                            <div class="loader"></div>
                        </div>
                        <div id="col-1" class="col-md-3"></div>
                        <div id="col-2" class="col-md-3"></div>
                        <div id="col-3" class="col-md-3"></div>
                        <div id="col-4" class="col-md-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-lg-12">
        <input id="GenerateParetoChart" type="button" value="Pareto Chart" class="btn btn-primary" />
    </div>
</div>
&nbsp;
<div class="row">
    <div class="col-lg-12">
        <div id='ParetoChart'></div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">

        $(function () {

            $.ajax({
                type: 'GET',
                url: '/Indicadores/GetSectores',
                dataType: 'json',
                success: function (response) {

                    var colSize = Math.ceil(response.length / 4);
                    var sector, html, label, group;
                    var col1 = response.splice(0, colSize);
                    for (i in col1) {
                        sector = col1[i];

                        group = $("<div class='form-group'>");
                        group.append("<input type='checkbox' value='" + sector.id + "' name='sectores'>" + sector.nombre);
                        $("#col-1").append(group);
                    }

                    var col2 = response.splice(0, colSize);
                    for (i in col2) {
                        sector = col2[i];

                        group = $("<div class='form-group'>");
                        group.append("<input type='checkbox' value='" + sector.id + "' name='sectores'>" + sector.nombre);
                        $("#col-2").append(group);
                    }

                    var col3 = response.splice(0, colSize);
                    for (i in col3) {
                        sector = col3[i];

                        group = $("<div class='form-group'>");
                        group.append("<input type='checkbox' value='" + sector.id + "' name='sectores'>" + sector.nombre);
                        $("#col-3").append(group);
                    }

                    for (i in response) {
                        sector = response[i];

                        group = $("<div class='form-group'>");
                        group.append("<input type='checkbox' value='" + sector.id + "' name='sectores'>" + sector.nombre);
                        $("#col-4").append(group);
                    }

                    $("#loader").remove();

                },
                error: function (ex) {
                    alert('Failed to retrieve data.' + ex);
                }
            });

        });
    </script>
}
