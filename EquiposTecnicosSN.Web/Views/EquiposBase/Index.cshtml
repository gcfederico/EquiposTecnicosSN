@using EquiposTecnicosSN.Web.CustomExtensions
@model IEnumerable<EquiposTecnicosSN.Entities.Equipos.Equipo>

@{
    ViewBag.Title = "Equipos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Listado de @ViewBag.Title</div>
            <div class="panel-body">

                <table class="table table-striped table-hover table-responsive table-condensed">
                    <thead>

                        <tr>
                            <th>
                                Tipo
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NombreCompleto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UMDNS)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Estado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ubicacion)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Tipo().DisplayName()
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreCompleto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UMDNS)
                                </td>
                                <td>
                                    @item.Estado.DisplayName()
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ubicacion.Nombre)
                                </td>
                                <td>
                                    <a class="btn btn-default btn-xs btn-list"
                                       href="@Url.Action("Edit", item.WebController(), new { id = item.EquipoId })"
                                       title="Editar Equipo">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                    <a class="btn btn-default btn-xs btn-list"
                                       href="@Url.Action("Details", item.WebController(), new { id = item.EquipoId })"
                                       title="Ver Equipo">
                                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>