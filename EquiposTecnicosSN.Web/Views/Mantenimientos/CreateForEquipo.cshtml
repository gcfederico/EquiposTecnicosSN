                @Html.EditorFor(model => model.FechaDeInicio, new { htmlAttributes = new { @class = "form-control date-picker", disabled = "disabled", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.FechaDeInicio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-2" })
