@model IEnumerable<EquiposTecnicosSN.Entities.Equipos.EquipoOtro>

@{
    ViewBag.Title = "Otros Equipos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Listado de @ViewBag.Title</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.ActionLink("Nuevo", "Create", null, htmlAttributes: new { @type = "button", @class = "btn btn-primary btn-table-create" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <table id="table-equipos-climatizacion" class="table table-hover table-responsive table-condensed table-striped">
                            <thead>

                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.UMDNS)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NombreCompleto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Estado)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ubicacion)
                                </th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>


                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UMDNS)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreCompleto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Estado)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ubicacion.Nombre)
                                    </td>
                                    <td>
                                        <a class="btn btn-default btn-xs"
                                           href="@Url.Action("Edit", new { id = item.EquipoId })"
                                           title="Editar Equipo">
                                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        </a>
                                        <a class="btn btn-default btn-xs"
                                           href="@Url.Action("Details", new { id = item.EquipoId })"
                                           title="Ver Equipo">
                                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                        </a>
                                        <!--
                                            
                                        <a class="btn btn-default btn-xs"
                                           href="@Url.Action("Delete", new { id = item.EquipoId })"
                                           title="Eliminar Equipo">
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                        </a>
                                        -->
                                        <a class="btn btn-default btn-xs"
                                           href="@Url.Action("CreateForEquipo", "ODTMantenimientoCorrectivo", new { id = item.EquipoId }, null)"
                                           title="Iniciar Orden de Trabajo para Mantenimiento Correctivo">
                                            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                                        </a>
                                        <a class="btn btn-default btn-xs"
                                           href="@Url.Action("CreateForEquipo", "ODTMantenimientoPreventivo", new { id = item.EquipoId }, null)"
                                           title="Iniciar Orden de Trabajo para Mantenimiento Preventivo">
                                            <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>